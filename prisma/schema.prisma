// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  nome    String
  senha   String
  isAdmin Boolean  @default(false)
  carrinho String[]
  compras Compra[]
}

model Produto {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  tituloProduto String
  descricao     String
  precoCentavos Int
  QtdEstoque    Int
  imagem        String
  categoriaId   String     @db.ObjectId  // ✅ Voltar para obrigatório
  categoria     Categoria  @relation(fields: [categoriaId], references: [id])
}

model Compra {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  usuarioId     String       @db.ObjectId
  mpIdCompra    String?      
  usuario       User         @relation(fields: [usuarioId], references: [id])
  valorCentavos Int?
  parcelas      Int
  status        String
  metodoPagamento String?    
  itens         CompraItem[]
  dataCriado    DateTime?    
  updatedAt     DateTime?    @updatedAt
}

model CompraItem {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  compraId      String   @db.ObjectId
  compra        Compra   @relation(fields: [compraId], references: [id])
  produtoId     String?   // opcional, se quiser referenciar
  nomeProduto   String
  descricao     String
  imagem        String
  precoUnitario Int       // preço congelado
  quantidade    Int
  subtotal      Int
}

model Categoria {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  nome      String    @unique
  produtos  Produto[]
}