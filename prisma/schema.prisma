generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  nome    String
  senha   String
  isAdmin Boolean  @default(false)
  carrinho String[]
}
model Produto {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  tituloProduto String
  descricao String
  precoCentavos Int
  QtdEstoque Int
  imagem String
}